<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_list_item_vertical_padding" >

    <ImageView
        android:layout_width="@dimen/app_list_item_icon_size"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_outlet_32dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView_RowItem_WorkStatus"
        android:layout_alignParentRight="true" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView_RowItem_WorkStatus"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:paddingLeft="@dimen/app_list_item_vertical_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appTextBody1"
                android:text="@string/empty"
                android:id="@+id/textView_RowItem_OutletName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appTextCaption"
                android:text="@string/empty"
                android:id="@+id/textView_RowItem_OutletAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appTextCaption"
                android:text="@string/empty"
                android:id="@+id/textView_RowItem_OutletArea" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appTextCaption"
                android:text="@string/empty"
                android:id="@+id/textView_RowItem_ExpiredDate" />
        </LinearLayout>

</RelativeLayout>